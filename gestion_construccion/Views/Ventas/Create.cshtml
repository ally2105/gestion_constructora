@model gestion_construccion.Models.Venta

@{
    ViewData["Title"] = "Crear Venta";
}

<h2>@ViewData["Title"]</h2>

<p>Nota: Esta es una vista simplificada. Se necesitar√° un ViewModel para una funcionalidad completa.</p>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ClienteId" class="control-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>
</form>
