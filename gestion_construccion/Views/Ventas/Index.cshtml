@model IEnumerable<gestion_construccion.Models.Venta>

@{
    ViewData["Title"] = "Historial de Ventas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Venta</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Cliente.Usuario.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        <td>@item.Total.ToString("C")</td>
                        <td>
                            <a asp-action="Receipt" asp-route-id="@item.Id">Ver Recibo</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
