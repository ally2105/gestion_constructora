@model gestion_construccion.Models.Venta

@{
    ViewData["Title"] = "Recibo de Venta";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Venta #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente.Usuario.Nombre</dd>
        
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha</dd>
        
        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
    </dl>

    <h5>Detalles</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.Detalles)
            {
                <tr>
                    <td>@detalle.Producto.Nombre</td>
                    <td>@detalle.Cantidad</td>
                    <td>@detalle.PrecioUnitario.ToString("C")</td>
                    <td>@((detalle.Cantidad * detalle.PrecioUnitario).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Volver al Historial</a>
</div>
