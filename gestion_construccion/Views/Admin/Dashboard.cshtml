@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <!-- Tarjeta Total Productos -->
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total de Productos</h5>
                        <h2 class="card-text">@ViewData["TotalProductos"]</h2>
                    </div>
                    <i class="bi bi-box-seam" style="font-size: 3rem;"></i>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-controller="Productos" asp-action="Index" class="text-white">Ver detalles</a>
                <i class="bi bi-arrow-right-circle"></i>
            </div>
        </div>
    </div>

    <!-- Tarjeta Total Clientes -->
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total de Clientes</h5>
                        <h2 class="card-text">@ViewData["TotalClientes"]</h2>
                    </div>
                    <i class="bi bi-people" style="font-size: 3rem;"></i>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-controller="Clientes" asp-action="Index" class="text-white">Ver detalles</a>
                <i class="bi bi-arrow-right-circle"></i>
            </div>
        </div>
    </div>

    <!-- Tarjeta Total Ventas -->
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-danger h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total de Ventas</h5>
                        <h2 class="card-text">@ViewData["TotalVentas"]</h2>
                    </div>
                    <i class="bi bi-receipt" style="font-size: 3rem;"></i>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-controller="Ventas" asp-action="Index" class="text-white">Ver detalles</a>
                <i class="bi bi-arrow-right-circle"></i>
            </div>
        </div>
    </div>
</div>

