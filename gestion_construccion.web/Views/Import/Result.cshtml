@model Firmeza.Core.Models.ViewModels.ImportResultViewModel

@{
    ViewData["Title"] = "Resultado de la Importación";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-info">
    <p><strong>Resumen de la operación:</strong></p>
    <ul>
        <li>Filas procesadas: @Model.FilasProcesadas</li>
        <li>Ventas creadas: @Model.VentasCreadas</li>
        <li>Clientes nuevos: @Model.ClientesNuevos</li>
        <li>Productos nuevos: @Model.ProductosNuevos</li>
    </ul>
</div>

@if (Model.Errores.Any())
{
    <div class="alert alert-danger">
        <h4>Se encontraron los siguientes errores:</h4>
        <ul>
            @foreach (var error in Model.Errores)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}
else
{
    <div class="alert alert-success">
        <h4>¡Importación completada con éxito y sin errores!</h4>
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a Importar</a>
</div>
