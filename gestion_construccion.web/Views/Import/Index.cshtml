@{
    ViewData["Title"] = "Importar Datos desde Excel";
}

<div class="card-admin card-admin-enhanced">
    <div class="card-header card-header-enhanced">
        <div class="header-left">
            <i class="fas fa-file-excel icon-header"></i>
            <div>
                <h2 class="title">Importar Datos desde Excel</h2>
                <p class="subtitle">Cargue un archivo .xlsx para actualizar productos, clientes y ventas.</p>
            </div>
        </div>
    </div>

    <div class="form-content">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="validation-summary-errors" style="margin-bottom: 20px;">
                <ul>
                    <li>@TempData["ErrorMessage"]</li>
                </ul>
            </div>
        }

        <p style="color: var(--color-text-secondary); margin-bottom: 25px;">
            Seleccione un archivo de Excel (.xlsx) que contenga las hojas "Productos", "Clientes" y "Ventas" para importar la información.
        </p>

        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="form-group-admin">
                <label for="file">Archivo Excel (.xlsx)</label>
                <input type="file" name="file" id="file" class="form-control-admin" accept=".xlsx" required />
            </div>
            
            <div class="form-actions" style="justify-content: flex-start;">
                <button type="submit" class="btn-admin btn-save">
                    <i class="fas fa-upload"></i> Iniciar Importación
                </button>
            </div>
        </form>
    </div>
</div>
