@model gestion_construccion.web.Models.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Crear Cliente";
}

<div class="card-admin card-admin-enhanced">
    <div class="card-header card-header-enhanced">
        <div class="header-left">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-header">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="8.5" cy="7" r="4"></circle>
                <line x1="20" y1="8" x2="20" y2="14"></line>
                <line x1="23" y1="11" x2="17" y2="11"></line>
            </svg>
            <div>
                <h2 class="title">Crear Nuevo Cliente</h2>
                <p class="subtitle">Ingrese los datos del nuevo cliente para registrarlo en el sistema.</p>
            </div>
        </div>
    </div>

    <form asp-action="Create">
        <div class="form-content">
            <partial name="_ClienteForm" model="Model" />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-admin btn-save">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                Crear Cliente
            </button>
            <a asp-action="Index" class="btn-admin-secondary btn-cancel">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
                Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
