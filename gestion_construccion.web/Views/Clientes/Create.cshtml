@model gestion_construccion.web.Models.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Crear Cliente";
}

<div class="card-admin">
    <div class="card-header">Crear Nuevo Cliente</div>
    <form asp-action="Create">
        <div asp-validation-summary="All" class="validation-summary-errors"></div>
        
        <h4 style="color: var(--color-primary); margin-top: 15px; margin-bottom: 20px;">Datos de Autenticaci√≥n</h4>
        <div class="form-group-admin">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control-admin" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control-admin" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <h4 style="color: var(--color-primary); margin-top: 30px; margin-bottom: 20px;">Datos Personales</h4>
        <div class="form-group-admin">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control-admin" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="Identificacion"></label>
            <input asp-for="Identificacion" class="form-control-admin" />
            <span asp-validation-for="Identificacion" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="FechaNacimiento"></label>
            <input asp-for="FechaNacimiento" class="form-control-admin" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control-admin" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control-admin" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" class="btn-admin">Crear</button>
            <a asp-action="Index" class="btn-admin-secondary" style="margin-left: 10px;">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
