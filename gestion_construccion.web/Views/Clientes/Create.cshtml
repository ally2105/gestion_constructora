@model gestion_construccion.web.Models.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Crear Cliente";
}

<div class="card-admin card-admin-enhanced">
    <div class="card-header card-header-enhanced">
        <div class="header-left">
            <i class="fas fa-user-plus icon-header"></i>
            <div>
                <h2 class="title">Crear Nuevo Cliente</h2>
                <p class="subtitle">Ingrese los datos del nuevo cliente para registrarlo en el sistema.</p>
            </div>
        </div>
    </div>

    <form asp-action="Create">
        <div class="form-content">
            <partial name="_ClienteForm" model="Model" />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-admin btn-save">
                <i class="fas fa-user-plus"></i> Crear Cliente
            </button>
            <a asp-action="Index" class="btn-admin-secondary btn-cancel">
                <i class="fas fa-times-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
