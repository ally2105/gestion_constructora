@model IEnumerable<Firmeza.Core.Models.Cliente>

@{
    ViewData["Title"] = "Gestión de Clientes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Cliente</a>

            <!-- Formulario de Búsqueda -->
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchTerm" class="form-control me-2" placeholder="Buscar por nombre o documento..." />
                <button type="submit" class="btn btn-secondary">Buscar</button>
            </form>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Dirección</th>
                    <th>Fecha de Registro</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
