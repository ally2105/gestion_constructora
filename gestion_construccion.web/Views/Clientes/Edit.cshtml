@model gestion_construccion.web.Models.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="card-admin">
    <div class="card-header">Editar Cliente: @Model.Nombre</div>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <partial name="_ClienteForm" model="Model" />
        
        <div style="margin-top: 20px;">
            <button type="submit" class="btn-admin">Guardar Cambios</button>
            <a asp-action="Index" class="btn-admin-secondary" style="margin-left: 10px;">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
