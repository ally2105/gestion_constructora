@model Firmeza.Core.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="card-admin card-admin-enhanced">
    <div class="card-header card-header-enhanced">
        <div class="header-left">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-header">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <div>
                <h2 class="title">@Model.Usuario?.Nombre</h2>
                <p class="subtitle">Información detallada del cliente</p>
            </div>
        </div>
        <div class="header-right">
            <span class="badge-id">ID: @Model.Id</span>
        </div>
    </div>

    <div class="form-content">
        @if (Model != null && Model.Usuario != null)
        {
            <dl class="row-details">
                <dt>Email:</dt>
                <dd>@Html.DisplayFor(model => model.Usuario.Email)</dd>

                <dt>Teléfono:</dt>
                <dd>@Html.DisplayFor(model => model.Usuario.PhoneNumber)</dd>

                <dt>Identificación:</dt>
                <dd>@Html.DisplayFor(model => model.Usuario.Identificacion)</dd>

                <dt>Fecha de Nacimiento:</dt>
                <dd>@Model.Usuario.FechaNacimiento.ToShortDateString()</dd>

                <dt>Dirección:</dt>
                <dd>@Html.DisplayFor(model => model.Direccion)</dd>

                <dt>Fecha de Registro:</dt>
                <dd>@Model.FechaRegistro.ToShortDateString()</dd>
            </dl>
        }
        else
        {
            <p style="color: var(--color-text-secondary);">No se encontraron los detalles del cliente.</p>
        }
    </div>

    <div class="form-actions">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-admin btn-save">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            Editar Cliente
        </a> 
        <a asp-action="Index" class="btn-admin-secondary btn-cancel">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 12H5"></path>
                <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Volver a la lista
        </a>
    </div>
</div>
