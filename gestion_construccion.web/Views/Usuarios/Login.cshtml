@model gestion_construccion.web.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="login-split-container">
    <!-- Panel izquierdo con branding -->
    <div class="login-brand-panel">
        <div class="brand-content">
            <h1 class="logo">Firmaza</h1>
            <p class="slogan">
                Tu Plataforma Integral para la <br />
                Gestión de Construcción
            </p>
        </div>
    </div>

    <!-- Panel derecho con formulario -->
    <div class="login-form-panel">
        <div class="login-card-admin enhanced-shadow rounded">
            <h2 class="login-title-admin">Acceso de Administrador</h2>

            <form asp-action="Login" class="login-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <div class="form-group-admin improved-group">
                    <label asp-for="Email" class="form-label-admin"></label>
                    <input asp-for="Email" class="form-control-admin improved-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group-admin improved-group">
                    <label asp-for="Password" class="form-label-admin"></label>
                    <input asp-for="Password" class="form-control-admin improved-input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="remember-me-group improved-remember">
                    <input type="checkbox" asp-for="RememberMe" class="remember-checkbox" />
                    <label asp-for="RememberMe" class="remember-label">Recordarme</label>
                </div>

                <button type="submit" class="btn-admin btn-login-admin enhanced-btn">Ingresar</button>
            </form>
        </div>
    </div>
</div>
