<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Firmaza Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin-theme.css" asp-append-version="true"/>
</head>
<body>
    <header>
        <nav class="navbar-admin">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">Firmaza Admin</a>
            <ul class="nav-menu">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li><a asp-area="" asp-controller="Productos" asp-action="Index">Productos</a></li>
                    <li><a asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                    <li><a asp-area="" asp-controller="Ventas" asp-action="Index">Ventas</a></li>
                    <li class="user-info">Hola, @User.Identity.Name</li>
                    <li>
                        <form asp-area="" asp-controller="Usuarios" asp-action="Logout" method="post">
                            <button type="submit" class="btn-logout">Cerrar Sesión</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a asp-area="" asp-controller="Usuarios" asp-action="Login">Iniciar Sesión</a></li>
                    <li><a asp-area="" asp-controller="Usuarios" asp-action="Register">Registrarse</a></li>
                }
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="color: var(--color-text-secondary); text-align: center; padding: 20px; margin-top: 40px; border-color: var(--color-border) !important;">
        <div class="container">
            &copy; 2025 - Firmaza Admin
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
