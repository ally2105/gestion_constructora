@model Firmeza.Core.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="card-admin card-admin-enhanced" style="border-top-color: var(--color-danger);">
    <div class="card-header card-header-enhanced" style="background: linear-gradient(135deg, rgba(231, 76, 60, 0.15), rgba(231, 76, 60, 0.05));">
        <div class="header-left">
            <i class="fas fa-exclamation-triangle icon-header" style="color: var(--color-danger);"></i>
            <div>
                <h2 class="title" style="color: var(--color-danger);">Confirmar Eliminación</h2>
                <p class="subtitle">Esta acción no se puede deshacer</p>
            </div>
        </div>
        <div class="header-right">
            <span class="badge-id" style="background: rgba(231, 76, 60, 0.1); border-color: var(--color-danger); color: var(--color-danger);">ID: @Model.Id</span>
        </div>
    </div>

    <div class="form-content">
        <h3 style="color: var(--color-text-main); margin-bottom: 16px;">¿Estás seguro de que quieres eliminar este producto?</h3>
        
        @if (Model != null)
        {
            <dl class="row-details">
                <dt>Nombre:</dt>
                <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                <dt>Descripción:</dt>
                <dd>@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt>Precio:</dt>
                <dd style="color: var(--color-price);">@Model.Precio.ToString("C")</dd>

                <dt>Stock:</dt>
                <dd>@Html.DisplayFor(model => model.Stock)</dd>
            </dl>
        }
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="btn-admin-danger">
                <i class="fas fa-trash-alt"></i> Sí, Eliminar Producto
            </button>
            <a asp-action="Index" class="btn-admin-secondary btn-cancel">
                <i class="fas fa-times-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
