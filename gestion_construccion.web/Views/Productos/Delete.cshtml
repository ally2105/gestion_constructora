@model Firmeza.Core.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="card-admin">
    <div class="card-header" style="background-color: #e74c3c; color: white;">Confirmar Eliminación</div>
    
    <h3 style="margin-top: 15px;">¿Estás seguro de que quieres eliminar este producto?</h3>
    <p style="color: var(--color-text-secondary);">Esta acción no se puede deshacer.</p>
    
    @if (Model != null)
    {
        <dl class="row" style="padding: 15px; background-color: var(--color-bg); border-radius: var(--radius);">
            <dt class="col-sm-4" style="color: var(--color-text-secondary);">Nombre</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-4" style="color: var(--color-text-secondary);">Precio</dt>
            <dd class="col-sm-8" style="color: var(--color-price);">@Model.Precio.ToString("C")</dd>
        </dl>
    }
    
    <form asp-action="Delete" style="margin-top: 20px;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-admin-danger">Sí, Eliminar</button>
        <a asp-action="Index" class="btn-admin-secondary" style="margin-left: 10px;">Cancelar</a>
    </form>
</div>
