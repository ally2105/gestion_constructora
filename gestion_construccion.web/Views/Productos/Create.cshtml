@model Firmeza.Core.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="card-admin">
    <div class="card-header">Crear Nuevo Producto</div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
        
        <div class="form-group-admin">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control-admin" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control-admin" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" class="form-control-admin" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group-admin">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" class="form-control-admin" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        
        <div style="margin-top: 20px;">
            <button type="submit" class="btn-admin">Crear</button>
            <a asp-action="Index" class="btn-admin-secondary" style="margin-left: 10px;">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
