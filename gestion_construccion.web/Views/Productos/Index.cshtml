@model IEnumerable<Firmeza.Core.Models.Producto>

@{
    ViewData["Title"] = "Gesti칩n de Productos";
}

<div class="card-admin card-admin-enhanced">
    <div class="card-header card-header-enhanced">
        <div class="header-left">
            <i class="fas fa-boxes icon-header"></i>
            <div>
                <h2 class="title">Gesti칩n de Productos</h2>
                <p class="subtitle">Administre el inventario de productos disponibles en el cat치logo.</p>
            </div>
        </div>
        <div class="header-right">
            <a asp-action="Create" class="btn-admin btn-save">
                <i class="fas fa-plus-circle"></i> Crear Nuevo Producto
            </a>
        </div>
    </div>

    <div class="form-content">
        <div class="d-flex justify-content-end mb-3">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchTerm" class="form-control-admin" placeholder="Buscar por nombre o descripci칩n..." style="margin-right: 10px;"/>
                <button type="submit" class="btn-admin-secondary">
                    <i class="fas fa-search"></i> Buscar
                </button>
            </form>
        </div>

        @if (!Model.Any())
        {
            <p style="color: var(--color-text-secondary); text-align: center; margin-top: 20px;">No hay productos registrados.</p>
        }
        else
        {
            <table class="table-admin">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th>@Html.DisplayNameFor(model => model.Stock)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td style="color: var(--color-price);">@item.Precio.ToString("C")</td>
                            <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-admin-secondary btn-sm" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-admin-secondary btn-sm" style="margin-left: 5px;" title="Detalles">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-admin-danger btn-sm" style="margin-left: 5px;" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
