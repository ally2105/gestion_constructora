@model IEnumerable<Firmeza.Core.Models.Venta>

@{
    ViewData["Title"] = "Gestión de Ventas";
}

<div class="card-admin card-admin-enhanced">
    <div class="card-header card-header-enhanced">
        <div class="header-left">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-header">
                <circle cx="9" cy="21" r="1"></circle>
                <circle cx="20" cy="21" r="1"></circle>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
            </svg>
            <div>
                <h2 class="title">Gestión de Ventas</h2>
                <p class="subtitle">Administre todas las transacciones de ventas realizadas en el sistema.</p>
            </div>
        </div>
        <div class="header-right">
            <a asp-action="Create" class="btn-admin btn-save">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                Crear Nueva Venta
            </a>
        </div>
    </div>

    <div class="form-content">
        @if (!Model.Any())
        {
            <div style="text-align: center; padding: 60px 20px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="color: var(--color-text-secondary); opacity: 0.3; margin-bottom: 24px;">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
                <h3 style="color: var(--color-text-main); margin-bottom: 12px; font-size: 1.5rem;">No hay ventas registradas</h3>
                <p style="color: var(--color-text-secondary); margin-bottom: 24px;">Comienza registrando tu primera venta en el sistema</p>
                <a asp-action="Create" class="btn-admin btn-save">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="16"></line>
                        <line x1="8" y1="12" x2="16" y2="12"></line>
                    </svg>
                    Crear Primera Venta
                </a>
            </div>
        }
        else
        {
            <table class="table-admin">
                <thead>
                    <tr>
                        <th>ID Venta</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th style="text-align: center;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge badge-info" style="font-size: 0.9rem;">#@item.Id</span>
                            </td>
                            <td>
                                <strong style="color: var(--color-text-main);">@item.Cliente?.Usuario?.Nombre</strong>
                            </td>
                            <td>
                                <span style="color: var(--color-text-secondary);">@item.Fecha.ToShortDateString()</span>
                            </td>
                            <td>
                                <strong style="color: var(--color-price); font-size: 1.05rem;">@item.Total.ToString("C")</strong>
                            </td>
                            <td style="text-align: center;">
                                <div style="display: inline-flex; gap: 8px; flex-wrap: wrap; justify-content: center;">
                                    <a asp-action="Receipt" asp-route-id="@item.Id" class="btn-admin-secondary btn-sm" title="Ver detalles">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <line x1="12" y1="16" x2="12" y2="12"></line>
                                            <line x1="12" y1="8" x2="12.01" y2="8"></line>
                                        </svg>
                                        Detalles
                                    </a>
                                    @if (!string.IsNullOrEmpty(item.ReciboPdfPath))
                                    {
                                        <a asp-action="DownloadReceipt" asp-route-id="@item.Id" target="_blank" class="btn-admin-secondary btn-sm" title="Descargar PDF">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                                <polyline points="14 2 14 8 20 8"></polyline>
                                                <line x1="12" y1="18" x2="12" y2="12"></line>
                                                <line x1="9" y1="15" x2="15" y2="15"></line>
                                            </svg>
                                            PDF
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
