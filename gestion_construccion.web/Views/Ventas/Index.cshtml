@model IEnumerable<gestion_construccion.web.Models.Venta>

@{
    ViewData["Title"] = "Gesti√≥n de Ventas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Venta</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID Venta</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Cliente?.Usuario?.Nombre</td>
                        <td>@item.Fecha.ToShortDateString()</td>
                        <td>@item.Total.ToString("C")</td>
                        <td>
                            <a asp-action="Receipt" asp-route-id="@item.Id">Ver Recibo</a>
                            @if (!string.IsNullOrEmpty(item.ReciboPdfPath))
                            {
                                <a href="@item.ReciboPdfPath" target="_blank" class="ms-2">Descargar PDF</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
