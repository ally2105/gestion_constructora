@model IEnumerable<Firmeza.Core.Models.Venta>

@{
    ViewData["Title"] = "Gestión de Ventas";
}

<div class="card-admin">
    <div class="card-header">Gestión de Ventas</div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn-admin">Crear Nueva Venta</a>
    </div>

    <table class="table-admin">
        <thead>
            <tr>
                <th>ID Venta</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Cliente?.Usuario?.Nombre</td>
                    <td>@item.Fecha.ToShortDateString()</td>
                    <td style="color: var(--color-price);">@item.Total.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-admin-secondary btn-sm">Detalles</a>
                        @if (!string.IsNullOrEmpty(item.ReciboPdfPath))
                        {
                            <a href="@item.ReciboPdfPath" target="_blank" class="btn-admin-secondary btn-sm" style="margin-left: 5px;">Descargar PDF</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
